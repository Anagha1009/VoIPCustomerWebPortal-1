@model VoipApplicationProject.Models.CustomerModel

@{
    ViewData["Title"] = "DemoSignUp";
}

<h3 class="text-center">Demo Registration</h3>
<div class="text-center mb-2"><small class="font-weight-bold">Make the most of your professional life.</small></div>
<form asp-action="SignUp" class="mt-3">
    <div class="col-md-6 offset-md-3">
        <div class="mb-2"><small>To Register Enter details.</small></div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="UserName" class="form-control" placeholder="User Name*" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Email" class="form-control" placeholder="Email ID*" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="OrganisationName" class="form-control" placeholder="Organization Name*" />
            <span asp-validation-for="OrganisationName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="CustomerTypeID" class="form-control" placeholder="Role In Business*" />
            <span asp-validation-for="CustomerTypeID" class="text-danger"></span>
        </div>
    </div>
    <div class="text-center">
        <label>By Clicking Agree & Join</label>
    </div>
    <div class="offset-md-2">
        <label class="ml-2">you agree to motile.com :</label>
        <a href="#">Disclaimer</a>
        <a href="#">Terms & Conditions</a>
        <a href="#">User Agreement Policy</a>
        <a href="#">Cookie Policy</a>
        <div class="col-md-4 offset-md-3 mt-3">
            <input type="submit" value="Agree & Join" class="btn btn-primary btn-block" />
        </div>
    </div>
    <div class="text-center mt-2">
        <label>Already on motile.com? </label>
        <a href="Login">Sign in</a>
    </div>
</form>

