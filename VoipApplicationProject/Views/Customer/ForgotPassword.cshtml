@model VoipApplicationProject.Models.CustomerModel

@{
    ViewData["Title"] = "ForgotPassword";
}

<div class="col-md-4 mx-auto">
    <h3 class="text-center">First. let's find your account</h3>
    <div class="text-center"><label>Please enter your email ID</label></div>
    <form asp-action="ForgotPassword">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="Email" class="form-control" placeholder="Enter your Email*"/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group text-center">
            <a href="Login" class="btn btn-light border">Cancel</a>
            <input type="submit" value="Find Account" class="btn btn-primary" />
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@if (!String.IsNullOrEmpty(ViewBag.ShowAlert))
{
    if (ViewBag.ShowAlert == "success")
    {
        <script>alert("Reset password URL has been sent to the email successfully!");</script>
    }
    else
    {
        <script>alert("Your email doesn't exist. Please try again with valid email.");</script>
    }
}